apiVersion: v1
baseDomain: {{ ansible_domain }}
compute:
{% if cluster_install == '6+ node' %}
- hyperthreading: Enabled
  name: worker
  replicas: {{ number_of_workers }}
{% else %}
- name: worker
  platform: {}
  replicas: 0
{% endif %}
controlPlane:
  hyperthreading: Enabled
  name: master
  replicas: {{ number_of_masters }}
metadata:
  name: {{ cluster }}
networking:
  clusterNetworks:
  - cidr: {{ cluster_network_cidr }}
    hostPrefix: {{ host_prefix }}
  networkType: OpenShiftSDN
  serviceNetwork:
  - {{ service_network_cidr }}
platform:
  none: {}
pullSecret: '{{ pull_secret.stdout }}'
sshkey: '{{ ssh_key.stdout }}'
